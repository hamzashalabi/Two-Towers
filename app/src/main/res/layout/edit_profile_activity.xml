<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/edit_profile_button"
            android:layout_width="350dp"
            android:layout_height="72dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/profile_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/edit_profile_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="@+id/edit_profile_button"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_button"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_button" />

        <ImageView
            android:id="@+id/edit_profile_right_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edit_profile"
            app:layout_constraintBottom_toBottomOf="@+id/edit_profile_button"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/edit_profile_text"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_button" />

        <TextView
            android:id="@+id/edit_profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/abhaya_libre"
            android:text="@string/edit_profile"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/edit_profile_icon"
            app:layout_constraintStart_toEndOf="@+id/edit_profile_icon"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_icon" />

        <View
            android:id="@+id/divider5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_button" />


        <ImageView
            android:id="@+id/change_name_button"
            android:layout_width="330dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/profile_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider5" />

        <ImageView
            android:id="@+id/change_name_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/person"
            app:layout_constraintBottom_toBottomOf="@+id/change_name_button"
            app:layout_constraintStart_toStartOf="@+id/change_name_button"
            app:layout_constraintTop_toTopOf="@+id/change_name_button" />

        <ImageView
            android:id="@+id/change_name_right_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="@+id/change_name_button"
            app:layout_constraintEnd_toEndOf="@+id/change_name_button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/change_name_text"
            app:layout_constraintTop_toTopOf="@+id/change_name_button" />

        <TextView
            android:id="@+id/change_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/abhaya_libre"
            android:text="@string/change_name"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/change_name_icon"
            app:layout_constraintStart_toEndOf="@+id/change_name_icon"
            app:layout_constraintTop_toTopOf="@+id/change_name_icon" />


        <ImageView
            android:id="@+id/change_password_button"
            android:layout_width="330dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/profile_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_name_button" />


        <ImageView
            android:id="@+id/change_password_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/password"
            app:layout_constraintBottom_toBottomOf="@+id/change_password_button"
            app:layout_constraintStart_toStartOf="@+id/change_password_button"
            app:layout_constraintTop_toTopOf="@+id/change_password_button" />

        <ImageView
            android:id="@+id/change_password_right_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="@+id/change_password_text"
            app:layout_constraintEnd_toEndOf="@+id/change_password_button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/change_password_text"
            app:layout_constraintTop_toTopOf="@+id/change_password_text"
            app:layout_constraintVertical_bias="0.447" />

        <TextView
            android:id="@+id/change_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/abhaya_libre"
            android:text="@string/change_password"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/change_password_icon"
            app:layout_constraintStart_toEndOf="@+id/change_password_icon"
            app:layout_constraintTop_toTopOf="@+id/change_password_icon" />

        <ImageView
            android:id="@+id/sign_out_button"
            android:layout_width="330dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/profile_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delete_account_button" />

        <ImageView
            android:id="@+id/change_logout_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/logout"
            app:layout_constraintBottom_toBottomOf="@+id/sign_out_button"
            app:layout_constraintStart_toStartOf="@+id/sign_out_button"
            app:layout_constraintTop_toTopOf="@+id/sign_out_button" />

        <ImageView
            android:id="@+id/change_logout_right_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="@+id/sign_out_button"
            app:layout_constraintEnd_toEndOf="@+id/sign_out_button"
            app:layout_constraintHorizontal_bias="0.977"
            app:layout_constraintStart_toEndOf="@+id/change_logout_text"
            app:layout_constraintTop_toTopOf="@+id/sign_out_button" />

        <TextView
            android:id="@+id/change_logout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/abhaya_libre"
            android:text="@string/logout"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/change_logout_icon"
            app:layout_constraintStart_toEndOf="@+id/change_logout_icon"
            app:layout_constraintTop_toTopOf="@+id/change_logout_icon" />

        <ImageView
            android:id="@+id/delete_account_button"
            android:layout_width="330dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/profile_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_password_button" />

        <ImageView
            android:id="@+id/delete_account_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/trash_can"
            app:layout_constraintBottom_toBottomOf="@+id/delete_account_button"
            app:layout_constraintStart_toStartOf="@+id/delete_account_button"
            app:layout_constraintTop_toTopOf="@+id/delete_account_button" />

        <ImageView
            android:id="@+id/delete_account_right_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="@+id/delete_account_button"
            app:layout_constraintEnd_toEndOf="@+id/delete_account_button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/delete_account_text"
            app:layout_constraintTop_toTopOf="@+id/delete_account_button" />

        <TextView
            android:id="@+id/delete_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/abhaya_libre"
            android:text="@string/delete_account"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/delete_account_icon"
            app:layout_constraintStart_toEndOf="@+id/delete_account_icon"
            app:layout_constraintTop_toTopOf="@+id/delete_account_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>